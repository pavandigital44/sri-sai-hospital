<section class="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-5">
                <div class="contact-box-tp">
                    <h4>Contact Info</h4>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="contact-box d-flex">
                            <div class="contact-icon">
                                <i class="fa fa-map-marker"></i>
                            </div>
                            <div class="contact-content">
                                <h6>Our Location</h6>
                                <p>Sri Raghavendra Swamy Layout, Yadavanahalli, Bengaluru, Karnataka 562107.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="contact-box d-flex">
                            <div class="contact-icon">
                                <i class="fa fa-envelope"></i>
                            </div>
                            <div class="contact-content">
                                <h6>Email Address</h6>
                                <p><a  class="__cf_email__">enquiry@srisaihospitals.co.in</a> <br><a class="__cf_email__">hr@srisaihospitals.co.in</a></p>
                                @*<p><a href="mailto:info@srisaihospitals.co.in" class="__cf_email__">enquiry@srisaihospitals.co.in</a> <br><a href="mailto:hr@srisaihospitals.co.in" class="__cf_email__">hr@srisaihospitals.co.in</a></p>*@
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="contact-box d-flex">
                            <div class="contact-icon">
                                <i class="fa fa-phone"></i>
                            </div>
                            <div class="contact-content">
                                <h6>Phone Number</h6>
                                <p>+829 633 3399 <br>+802 976 6055</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="contact-box d-flex">
                            <div class="contact-icon">
                                <i class="fa fa-clock-o"></i>
                            </div>
                            <div class="contact-content">
                                <h6>Visiting hours</h6>
                                <p>
                                    <strong>Wards</strong>- 8AM to 9AM, 1PM to 2PM, 6PM to 7PM <br/>
                                    <strong>ICU</strong>- 10AM to 11AM, 4PM to 5PM
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                @*<div class="social-link">
                    <ul class="list-unstyled list-inline">
                        <li class="list-inline-item"><a href="#"><i class="fa fa-facebook"></i></a></li>
                        <li class="list-inline-item"><a href="#"><i class="fa fa-twitter"></i></a></li>
                        <li class="list-inline-item"><a href="#"><i class="fa fa-linkedin"></i></a></li>
                    </ul>
                </div>*@
            </div>
            <div class="col-lg-8 col-md-7">
                <div class="contact-form">
                    <h4>Get In Touch</h4>
                    <script type="text/javascript">                      
                        function SuccessMessage() {
                            @*$('.button-box').click(function () {
                                window.location.href = '@Url.Action("Index","Home")';
                            });*@
                        }
                        function FailMessage() {
                            alert("Something went wrong while submitting email");
                        }
                    </script>
                    @using (Ajax.BeginForm("Contact", "Home", null, new AjaxOptions
                    {
                        HttpMethod = "POST",
                        OnSuccess = "SuccessMessage",
                        OnFailure = "FailMessage",
                        UpdateTargetId = "contactMessage",
                        OnBegin= "startRequest"
                    }, new { id = "frmContact" })) // set new Id name for  Form
                    {
                        @Html.AntiForgeryToken()

                        <div class="top-icon"><img src="~/images/appoint-form-top.png" alt=""></div>

                        <div class="forms-feelds">
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="hidden" asp-for="ContactId" />
                                    <p><input type="text" id="Name" name="Name" placeholder="Full Name" required=""></p>
                                    @Html.ValidationMessageFor(model => model.Name)
                                </div>
                                <div class="col-md-6">
                                    <p><input type="email" id="Email" name="Email" placeholder="Email" required=""></p>
                                    @Html.ValidationMessageFor(model => model.Email)
                                </div>
                                <div class="col-md-12">
                                    <p><input type="text" id="Subject" name="Subject" placeholder="Subject"></p>
                                    @Html.ValidationMessageFor(model => model.Subject)
                                </div>
                                <div class="col-md-12">
                                    @Html.ValidationMessageFor(model => model.Message)
                                    <p><textarea name="Message" id="Message" placeholder="Message" required=""></textarea></p>
                                </div>
                                <div class="col-md-12">
                                    <button type="submit">Send Message</button>
                                </div>
                            </div>
                        </div>


                    }
                </div>
            </div>
        </div>
    </div>
